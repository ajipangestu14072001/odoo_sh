<odoo>
    <record id="view_x_test_model_list" model="ir.ui.view">
        <field name="name">x_test.model.list</field>
        <field name="model">x_test.model</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="view_x_test_model_form" model="ir.ui.view">
        <field name="name">x_test.model.form</field>
        <field name="model">x_test.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_x_test_model" model="ir.actions.act_window">
        <field name="name">Test</field>
        <field name="res_model">x_test.model</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_x_test_model"
              name="Test"
              parent="sale.sale_menu_root"
              sequence="100"
              action="action_x_test_model"/>

    <menuitem id="menu_x_test_submodel"
              name="Submenu Test"
              parent="menu_x_test_model"
              sequence="10"
              action="action_x_test_model"/>

    <record id="action_quotation" model="ir.actions.act_window">
        <field name="name">Quotations</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', 'in', ['draft', 'sent', 'sale', 'cancel'])]</field>
    </record>

    <menuitem id="menu_quotation"
              name="Quotations"
              parent="menu_x_test_model"
              sequence="20"
              action="action_quotation"/>

    <record id="action_external_website" model="ir.actions.act_url">
        <field name="name">Digital Center</field>
        <field name="url">https://digitalcenter.id/en</field>
    </record>

    <menuitem id="menu_external_website"
              name="Visit Digital Center"
              parent="menu_x_test_model"
              sequence="30"
              action="action_external_website"/>

    <record id="action_custom_commission" model="ir.actions.act_window">
        <field name="name">Custom Commissions</field>
        <field name="res_model">x.commission</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_custom_commission"
              name="Custom Commission"
              parent="menu_x_test_model"
              sequence="40"
              action="action_custom_commission"/>
</odoo>
