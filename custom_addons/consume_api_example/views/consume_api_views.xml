<odoo>
    <!-- Tree View -->
    <record id="view_external_api_list" model="ir.ui.view">
        <field name="name">external.api.example.list</field>
        <field name="model">external.api.example</field>
        <field name="arch" type="xml">
            <list>
                <field name="api_id"/>
                <field name="title"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_external_api_form" model="ir.ui.view">
        <field name="name">external.api.example.form</field>
        <field name="model">external.api.example</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="fetch_api_data" string="Fetch API" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="api_id"/>
                        <field name="title"/>
                        <field name="body"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action Window -->
    <record id="action_external_api_data" model="ir.actions.act_window">
        <field name="name">API Data</field>
        <field name="res_model">external.api.example</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_external_api_root" name="External API" sequence="10"/>
    <menuitem id="menu_external_api_data" name="API Data"
              parent="menu_external_api_root"
              action="action_external_api_data"
              sequence="20"/>

    <!-- Server Action to Fetch API Data -->
    <record id="action_fetch_api_data" model="ir.actions.server">
        <field name="name">Fetch API Data</field>
        <field name="model_id" ref="model_external_api_example"/>
        <field name="binding_model_id" ref="model_external_api_example"/>
        <field name="state">code</field>
        <field name="code">
            env['external.api.example'].fetch_api_data()
        </field>
    </record>
</odoo>
